---
import Layout from "../layouts/Layout.astro";
import Counters from "../components/Counters.astro";
import CardsSection from "../components/CardsSection.astro";
import Promise from "../components/Promise.astro";
import Pricing from "../components/Pricing.astro";
import ContactSection from "../components/ContactSection.astro";
import Footer from "../components/Footer.astro";
import Main from "../components/Main.astro";
import Faq from "../components/Faq.astro";
---

<Layout title=" agency for building .">
    <Main />
    <Counters />
    <CardsSection />
    <Promise />
    <Pricing />
    <ContactSection />
    <Faq />
    <Footer />
</Layout>

<script
    defer
    src="https://cdn.jsdelivr.net/npm/@alpinejs/intersect@3.x.x/dist/cdn.min.js"
></script>
<script>
    import Alpine from "alpinejs";
    // @ts-ignore
    import focus from "@alpinejs/focus";
    import intersect from "@alpinejs/intersect";
    Alpine.plugin(intersect);
    Alpine.plugin(focus);
    import gsap from "gsap";
    import { ScrollTrigger } from "gsap/ScrollTrigger";

    // Register the ScrollTrigger plugin
    gsap.registerPlugin(ScrollTrigger);

    // Ensure animations are only triggered when the element is in view
    gsap.from("#hero-title", {
        y: 100,
        opacity: 0,
        duration: 1,
        delay: 0.5,
        scrollTrigger: {
            trigger: "#hero-title",
            start: "top 80%", // Animation starts when the top of the element hits 80% of the viewport height
            toggleActions: "play none none reverse", // Play the animation when entering, and reverse it when leaving
        },
    });

    gsap.from("#hero-description", {
        y: 100,
        opacity: 0,
        duration: 1,
        delay: 1,
        scrollTrigger: {
            trigger: "#hero-description",
            start: "top 80%",
            toggleActions: "play none none reverse",
        },
    });

    gsap.from("#hero-button", {
        y: 100,
        opacity: 0,
        duration: 1,
        delay: 1.5,
        scrollTrigger: {
            trigger: "#hero-button",
            start: "top 80%",
            toggleActions: "play none none reverse",
        },
    });
</script>

<style is:global>
    @import url("https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap");
    *,
    html {
        scroll-behavior: smooth;
    }
    body {  
        font-family: "Roboto", sans-serif;
        font-size: 16px;
        line-height: 1.5;
    }
    ::-webkit-scrollbar {
        width: 8px;
    }

    ::-webkit-scrollbar-track {
        background: #f1f1f1;
    }

    ::-webkit-scrollbar-thumb {
        background: #888;
        border-radius: 4px;
    }

    ::-webkit-scrollbar-thumb:hover {
        background: #f97316;
    }
</style>


    