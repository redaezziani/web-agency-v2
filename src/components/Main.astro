---
import Image from "astro/components/Image.astro";
import AvatarClient from "./AvatarClient.astro";
---

<section
    id="about"
    class="w-full min-h-[70vh] overflow-hidden lg:min-h-[90vh] justify-start items-center flex flex-col relative"
>
    <div class="w-full h-[70vh] lg:min-h-[90vh] absolute left-0 top-0 -z-[1]">
        <Image
            width={1920}
            height={1080}
            src="/hero.webp"
            class="object-cover w-full h-full"
            alt=""
            srcset=""
        />
    </div>
    <span
        class="w-full h-[70vh] lg:min-h-[90vh] absolute left-0 top-0 backdrop-blur-sm z-[1] bg-white/10"
    >
    </span>
    <div
        class="flex flex-col md:px-0 px-3 z-10 justify-start items-start gap-6 max-w-7xl mt-52"
    >
        <h2 id="hero-title" class="text-3xl lg:text-5xl text-white capitalize">
            Prêt à Transformer Votre Entreprise avec Lymo ?
        </h2>
        <p
            id="hero-description"
            class="text-slate-100 text-sm md:text-xl max-w-4xl"
        >
            Contactez-nous aujourd'hui pour discuter de vos besoins et découvrir
            comment lymo peut faire passer votre entreprise au niveau
            supérieur.
        </p>
        <div
        id="hero-rating"
        class="flex gap-x-2 justify-start items-center">
            <AvatarClient />
            <p
                class="flex gap-1 ml-2 text-slate-100 font-sm justify-start items-center"
            >
            4.8
                <svg
                    class="fill-amber-400 stroke-amber-500"
                    xmlns="http://www.w3.org/2000/svg"
                    viewBox="0 0 24 24"
                    width="24"
                    height="24"
                    fill="currentColor"
                >
                    <path
                        d="M13.7276 3.44418L15.4874 6.99288C15.7274 7.48687 16.3673 7.9607 16.9073 8.05143L20.0969 8.58575C22.1367 8.92853 22.6167 10.4206 21.1468 11.8925L18.6671 14.3927C18.2471 14.8161 18.0172 15.6327 18.1471 16.2175L18.8571 19.3125C19.417 21.7623 18.1271 22.71 15.9774 21.4296L12.9877 19.6452C12.4478 19.3226 11.5579 19.3226 11.0079 19.6452L8.01827 21.4296C5.8785 22.71 4.57865 21.7522 5.13859 19.3125L5.84851 16.2175C5.97849 15.6327 5.74852 14.8161 5.32856 14.3927L2.84884 11.8925C1.389 10.4206 1.85895 8.92853 3.89872 8.58575L7.08837 8.05143C7.61831 7.9607 8.25824 7.48687 8.49821 6.99288L10.258 3.44418C11.2179 1.51861 12.7777 1.51861 13.7276 3.44418Z"
                        stroke="currentColor"
                        stroke-width="1.5"
                        stroke-linecap="round"
                        stroke-linejoin="round"></path>
                </svg>
                
            </p>
        </div>
        <a href="/#contact">
            <button
                id="hero-button"
                class="bg-primary group text-sm hover:outline outline-primary/80 outline-offset-2 lg:text-base text-slate-100 px-6 py-3 flex gap-2 justify-center items-center rounded-full"
            >
                Demander une démo maintenant

                <svg
                    class="group-hover:ml-2 group-hover:-rotate-45 transition-all ease-in-out duration-500"
                    xmlns="http://www.w3.org/2000/svg"
                    viewBox="0 0 24 24"
                    width="24"
                    height="24"
                    fill="none"
                >
                    <path
                        d="M20.0001 11.9998L4.00012 11.9998"
                        stroke="currentColor"
                        stroke-width="1.5"
                        stroke-linecap="round"
                        stroke-linejoin="round"></path>
                    <path
                        d="M15.0003 17C15.0003 17 20.0002 13.3176 20.0002 12C20.0002 10.6824 15.0002 7 15.0002 7"
                        stroke="currentColor"
                        stroke-width="1.5"
                        stroke-linecap="round"
                        stroke-linejoin="round"></path>
                </svg>
            </button>
        </a>
    </div>
</section>

