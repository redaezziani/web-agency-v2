---
const socials = [
    {
        name: 'Facebook',
        url: 'https://facebook.com',
    },
    {
        name: 'Twitter',
        url: 'https://twitter.com',
    },
    {
        name: 'LinkedIn',
        url: 'https://linkedin.com',
    },
]


const services = [
    "Base de Données Centralisée",
    "Interface Utilisateur Intuitive",
    "Visualisation Avancée des Données",
    "Rapports Personnalisés",
    "Performance et Pilotage Interne (KPI)",
    "Contrôle Administratif",
];
---
<footer
    class="w-full flex mt-10 justify-center items-center bg-slate-50 border-y border-slate-400/35 py-6"
>
    <div
        class="grid max-w-7xl grid-cols-2 w-full gap-4 px-4 lg:grid-cols-3 md:px-8 lg:px-16"
    >
        <div class="flex flex-col gap-4">
            <h3 class="text-lg font-bold text-slate-600">À propos</h3>
            <a href="/" class="text-slate-500 hover:text-primary">
                Qui sommes-nous
            </a>
            <a href="/" class="text-slate-500 hover:text-primary">
                Notre mission
            </a>
            <a href="/" class="text-slate-500 hover:text-primary">
                Nos valeurs
            </a>
        </div>
        <div class="flex flex-col gap-4">
            <a
            href="/#services"
            class="text-lg font-bold text-slate-600">Services</a>
            {
                services.map((service) => (
                    <a
                        href="/#services"
                        class="text-slate-500 hover:text-primary"
                    >
                        {service}
                    </a>
                ))
            }
        </div>
        <div class="flex flex-col gap-4">
            <h3 class="text-lg font-bold text-slate-600">Contact</h3>
            <a href="/#contact" class="text-slate-500 hover:text-primary">
                Contactez-nous
            </a>
            <a href="/#contact" class="text-slate-500 hover:text-primary">
                Demande de devis
            </a>
            <a href="/#contact" class="text-slate-500 hover:text-primary">
                Support technique
            </a>
        </div>

        <div class="flex flex-col gap-4">
            <h3 class="text-lg font-bold text-slate-600">Suivez-nous</h3>
           
           {
               socials.map((social, index) => (
                   <a
                       href={social.url}
                       class="text-slate-500 hover:text-primary"
                   >
                       {social.name}
                   </a>
               ))
           }
        </div>
    </div>
</footer>
