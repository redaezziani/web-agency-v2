---
import ContactForm from "./ContactForm.astro";

const services = [
    "Web Development",
    "Mobile Development",
    "UI/UX Design",
    "SEO Optimization",
    "Digital Marketing",
    "Branding",
    "E-commerce",  
];

---

<section
id="contact"
class="w-full  bg-gray-900 border-b border-slate-300/25 flex justify-start flex-col items-center mt-10 min-h-[60rem]"
>
<span
    class="w-full  px-3 lg:px-0 flex justify-start flex-col items-center  lg:min-h-[30rem] bg-primary"
>
    <div
        class="max-w-7xl min-h-[30rem] py-6 w-full flex-col justify-between flex items-start h-full text-white/90"
    >
        <p class="text-slate-100 text-sm md:text-xl max-w-4xl">
            Contact-nous
        </p>
        <h3 class="text-3xl lg:text-5xl capitalize max-w-4xl">
            Contactez-nous pour plus d'informations sur nos solutions de
            gestion
        </h3>
    </div>
</span>

<div class="w-full px-3 lg:px-0  max-w-7xl py-6 grid lg:grid-cols-2 gap-2 relative">
    <div class="flex flex-col gap-3 justify-start items-start">
        <p class="text-slate-400 text-base">
            R agency est une entreprise spécialisée dans le
            développement de logiciels de gestion commerciale,
            comptabilité et bâtiment, conformes aux normes marocaines.
     
        <h4 class="relative mt-5 text-slate-700/35 text-sm w-full">
            <span
                class="text-3xl z-10 relative lg:text-5xl text-primary font-bold"
            >
                06 86 77 88 99
            </span>

            <span
                class="text-3xl z-0 absolute left-1 top-1 lg:text-5xl font-bold"
            >
                06 86 77 88 99
            </span>
        </h4>

        <span class="relative inline-flex">
            <span
            class=" text-secondary-second text-lg font-semibold"
            >
                Nos services
            </span>
            <svg class=" fill-secondary-second absolute bottom-0" xmlns="http://www.w3.org/2000/svg" width="132" height="4">
                <path fill-opacity=".4" fill-rule="evenodd" d="M131.014 2.344s-39.52 1.318-64.973 1.593c-25.456.24-65.013-.282-65.013-.282C-.34 3.623-.332 1.732.987 1.656c0 0 39.52-1.32 64.973-1.593 25.455-.24 65.012.282 65.012.282 1.356.184 1.37 1.86.042 1.999" />
            </svg>
        </span>

        <div class="mt-3 grid gap-3 grid-cols-2 w-full">
           {services.map((service) => (
                <h5
            class=" flex gap-2 justify-start items-center text-slate-400 text-sm"
            >
            <svg
            class="w-5 h-5 text-green-500"
            xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="24" height="24"  fill="none">
                <path d="M22 12C22 6.47715 17.5228 2 12 2C6.47715 2 2 6.47715 2 12C2 17.5228 6.47715 22 12 22C17.5228 22 22 17.5228 22 12Z" stroke="currentColor" stroke-width="1.5" />
                <path d="M8 12.5L10.5 15L16 9" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
            </svg>
                <span>
                    {service}
                </span>
            </h5>
              ))}

        </div>
    </div>

    <section class="w-full col-span-1 relative">
     <ContactForm />
    </section>
</div>
</div>